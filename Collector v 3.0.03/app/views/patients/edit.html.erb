<% content_for :title do %>
    Edit Client: <%= session[:edit_patient_original_name] %>
<% end %>

<% content_for :header do %>
    <%= link_to 'Back', av_show_all_patients_path, :class => 'ui-btn ui-btn-icon-bottom ui-icon-back' %>
<% end %>

  <h2>Edit Client: <%= session[:edit_patient_original_name] %></h2>

  <% if @patient.errors.any? %>
      <div class='error_messages'>
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @patient.errors.full_messages %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <%= form_for @patient do |f| %>
      <h3>
        <%= f.label :name %>
        <%= f.text_field :patient_name %>
      </h3>

      <div data-role="footer" data-position="fixed" data-tap-toggle="false">
        <div data-role="navbar">
          <ul>
            <li><%= submit_tag 'Submit', :class => 'ui-btn' %></li>
            <li><%= link_to 'Cancel', av_show_all_patients_path, :class => 'ui-btn'  %></li>
          </ul>
        </div>
      </div>
  <% end %>

<% content_for :panel do %>
    <ul>
      <li>Enter the new name and press submit to save.</li>
    </ul>
<% end %>