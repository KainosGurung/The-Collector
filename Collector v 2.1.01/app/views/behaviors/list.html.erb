<title>Select a Behavior to assign to Individual: <%= params[:patient_name]%></title>

<table class="background">
  <tr class="background">
    <td width="75px"></td>
    <td><h3><center>Select a Behavior to assign to Individual: <%= params[:patient_name]%></center></h3></td>
  </tr>
</table>

<% if @behavior_array != nil %>
    <div style="height:300px;overflow: auto;">
    <table width="50%">
    <% @behavior_array.each do |b| %>
        <tr>
          <td>
            <%= link_to b.behavior_name, av_create_new_patientbehavior_path(params[:patient_id], b.id), data: { confirm: 'Are you sure you wish to add behavior: '+b.behavior_name+' to individual: '+params[:patient_name] }, :class => 'behavior_button full' %>
          </td>
        </tr>
    <% end %>
    </table>
    </div>
<% else %>
    <h3>None</h3>
<% end %>
<br><br>
<table>
  <tr><td>
    <%= link_to 'Create New Behavior', av_create_new_behavior_and_add_to_patient_path(params[:patient_name], params[:patient_id]), :class => 'behavior_button' %>
  </td></tr>
</table>

<%= link_to 'Back', session[:behavior_show_url], :class => 'function_button menu' %>