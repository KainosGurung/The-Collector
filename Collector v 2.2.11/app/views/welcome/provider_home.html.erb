<% content_for :title do %>
    Provider Home page
<% end %>

<% content_for :header do %>
    <%= link_to 'Back', provider_home_path, :class => 'ui-btn ui-btn-icon-bottom ui-icon-back' %>
<% end %>

  <h2>Provider Home page</h2>
  Welcome back <%= session[:self_provider_name] %>

  <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>

  <%= link_to 'View Clients', pv_patient_record_arrays_path,
              :class => 'ui-btn ui-corner-all ui-btn-icon-right ui-icon-carat-r' %>

<% content_for :panel do %>
    <ul>
      <li>Press view clients to list clients that you are tracking.</li>
    </ul>
<% end %>



