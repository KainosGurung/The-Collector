<% content_for :title do %>
    Edit Behavior: <%= session[:edit_behavior_original_name] %>
<% end %>

<% content_for :header do %>
    <%= link_to 'Back', av_show_all_behaviors_path, :class => 'ui-btn ui-btn-icon-bottom ui-icon-back' %>
<% end %>

  <h2>Edit Behavior: <%= session[:edit_behavior_original_name] %></h2>

  <% if @behavior.errors.any? %>
      <div class='error_messages'>
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @behavior.errors.full_messages %>
              <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <%= form_for @behavior do |f| %>
      <h3>
        <%= f.label :behavior_name %>
        <%= f.text_field :behavior_name %>

        <%= f.label :behavior_description %>
        <%= f.text_area :behavior_description %>
      </h3>

      <div data-role="footer" data-position="fixed">
        <div data-role="navbar">
          <ul>
            <li><%= submit_tag 'Submit', :class => 'ui-btn ui-btn-icon-bottom ui-icon-star' %></li>
            <li><%= link_to 'Cancel', av_show_all_behaviors_path,
                            :class => 'ui-btn ui-btn-icon-bottom ui-icon-delete'  %></li>
          </ul>
        </div>
      </div>
  <% end %>

<% content_for :panel do %>
    <ul>
      <li>Type in the new Behavior name and/or description.</li>
      <li>Press Submit to save changes.</li>
    </ul>
<% end %>