<title>Create new Behavior and add to Individual: <%= params[:patient_name]%></title>

<table class="background">
  <tr class="background">
    <td width="75px"></td>
    <td><h3><center>Create new Behavior and add to Individual: <%= params[:patient_name]%></center></h3></td>
  </tr>
</table>

<!-- Creates a form for our patient model -->
<%= form_for @behavior do |f| %>

    <% if @behavior.errors.any? %>
        <div class='error_messages'>
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @behavior.errors.full_messages %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <h3>
    <p>
      <%= f.label :behavior_name %><br>
      <%= f.text_field :behavior_name %>
    </p>
    <p>
      <%= f.label :behavior_description %><br>
      <%= f.text_area :behavior_description %>
    </p>
    </h3>
    <%= hidden_field_tag :patient_id, params[:patient_id] %>
    <%= f.submit 'Submit', :class => 'function_button' %>
    <%= link_to 'Cancel', root_path, :class => 'function_button' %>

<% end %>
<table>
  <tr><td><%= link_to 'Back', session[:behavior_list_url], :class => 'function_button menu' %></td></tr>
</table>