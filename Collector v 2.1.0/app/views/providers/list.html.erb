<title>Select a Provider to assign to Individual: <%= params[:patient_name]%></title>

<table class="background">
  <tr class="background">
    <td width="75px"></td>
    <td><h3><center>Select a Provider to assign to Individual: <%= params[:patient_name]%></center></h3></td>
  </tr>
</table>

<% if @provider_array != nil %>
    <div style="height:300px;overflow: auto;">
    <table>
      <% @provider_array.each do |u| %>
          <tr>
            <td>
              <%= link_to u.provider_name, av_create_new_patientprovider_path(u.id, params[:patient_id]), data: { confirm: 'Are you sure you wish to assign provider: '+u.provider_name+' to individual: '+params[:patient_name] }, :class => 'provider_button width' %>
            </td>
          </tr>
      <% end %>
    </table>
    </div>
<% else %>
    <h3>None</h3>
<% end %>
<br><br>

<table>
  <tr><td>
    <%= link_to 'Create new provider', av_create_new_provider_and_assign_to_patient_path(params[:patient_name],params[:patient_id]), :class => 'provider_button' %>
  </td></tr>
</table>

<%= link_to 'Back', session[:provider_show_url], :class => 'function_button menu' %>