<% content_for :title do %>
    Incidents Graph
<% end %>

<% content_for :header do %>
    <%= link_to 'Back', av_show_all_incidents_path, :class => 'ui-btn ui-btn-icon-bottom ui-icon-back' %>
<% end %>

<div data-role="collapsible" data-collapsed="true" data-collapsed-icon="carat-d" data-expanded-icon="carat-u" data-iconpos="right">
  <h4>Provider</h4>
  <ul data-role="listview" data-theme="a" style="opacity: 0.5">
    <% @provider_array.each do |i| %>
        <li><%= link_to i.provider.provider_name, av_show_incident_graph_path(i.provider.id,0,0) %></li>
    <% end %>
    </ul>
</div>

<div data-role="collapsible" data-collapsed="true" data-collapsed-icon="carat-d" data-expanded-icon="carat-u" data-iconpos="right">
  <h4>Patient</h4>
  <ul data-role="listview" data-theme="a" style="opacity: 0.5">
    <% @patient_array.each do |i| %>
        <li><%= link_to i.patient.patient_name, av_show_incident_graph_path(0,i.patient.id,0) %></li>
    <% end %>
  </ul>
</div>

<div data-role="collapsible" data-collapsed="true" data-collapsed-icon="carat-d" data-expanded-icon="carat-u" data-iconpos="right">
  <h4>Behavior</h4>
  <ul data-role="listview" data-theme="a" style="opacity: 0.5">
    <% @behavior_array.each do |i| %>
        <li><%= link_to i.behavior.behavior_name, av_show_incident_graph_path(0,0,i.behavior.id) %></li>
    <% end %>
  </ul>
</div>


